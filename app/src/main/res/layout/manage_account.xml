<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ManageAccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/backIconImageView"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:contentDescription="@string/app_name"
                        android:contextClickable="true"
                        android:focusable="auto"
                        android:longClickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:soundEffectsEnabled="true"
                        app:srcCompat="@drawable/back"
                        tools:src="@drawable/back"
                        tools:srcCompat="@drawable/back" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="345dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:paddingLeft="-60dp"
                    android:text="ZEPHYR"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="#7E79AF"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background"
                android:backgroundTint="#2B2828"
                android:orientation="vertical"
                android:padding="20sp">


                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="match_parent"
                    android:layout_height="75sp"
                    tools:src="@drawable/manage_account" />

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="#1C1C1C"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="5dp"
                    android:text="Zen Adam"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#8C8787"
                    android:textColorHint="#FFFFFF"
                    android:textColorLink="#FFFFFF" />

                <EditText
                    android:id="@+id/editTextText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="#1C1C1C"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="5dp"
                    android:text="zenadam@gmail.com"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#8C8787"
                    android:textColorHint="#FFFFFF"
                    android:textColorLink="#FFFFFF" />

                <EditText
                    android:id="@+id/editTextText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="#1C1C1C"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="5dp"
                    android:text="+601245783498"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#8C8787"
                    android:textColorHint="#FFFFFF"
                    android:textColorLink="#FFFFFF" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="58dp" />

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#000000"
                    android:text="Save"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>