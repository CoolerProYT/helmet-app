<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FindMyHelmetActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/backIconImageView"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:contentDescription="@string/app_name"
                        android:contextClickable="true"
                        android:focusable="auto"
                        android:longClickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:soundEffectsEnabled="true"
                        app:srcCompat="@drawable/back"
                        tools:src="@drawable/back"
                        tools:srcCompat="@drawable/back" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="345dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:paddingLeft="-60dp"
                    android:text="ZEPHYR"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="#7E79AF"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background"
                android:backgroundTint="#2B2828"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingStart="10sp"
                    android:paddingTop="10sp"
                    android:paddingEnd="10sp"
                    android:text="Find My Helmet"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:id="@+id/findMyHelmetContent"
                    android:layout_width="match_parent"
                    android:layout_height="231dp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    tools:src="@drawable/find_my_helmet_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp">

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#252424"
                        android:text="Play Sound"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#252424"
                        android:text="Locate"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Coordinate:"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:gravity="right"
                        android:text="2.9570045680586867, 101.5516411404063"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/helmetWithYou"
                    android:layout_width="wrap_content"
                    android:layout_height="206dp"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    tools:src="@drawable/helmet_with_you" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>